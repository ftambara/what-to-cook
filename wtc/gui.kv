#:kivy 2.1.0

#:import project_path paths.project_path
#:import random random

#:set images_path project_path + 'assets/images/'
#:set main_color (125/255, 191/255, 0/255)
#:set main_color_clear (244/255, 255/255, 222/255)
#:set app_white (255/255, 255/255, 255/255)
#:set app_black (0/255, 0/255, 0/255)
#:set app_red (245/255, 30/255, 10/255)


<ImageButton@ButtonBehavior+Image>:

<RecipeCard>:
    # Add click behavior and redirect to recipe url on_release
    canvas.before:
        Color:
            rgb: app_white
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    size_hint: 1, 1
    # height: '120dp'
    on_release: app.open_url(root.recipe_url)
    BoxLayout:
        orientation:'horizontal'
        size_hint: 1, None
        size: self.minimum_size
        Label:
            size_hint_y: None
            height: dp(40)
            padding: '5dp', '5dp'
            text_size: self.width, None
            text: root.recipe_title
            color: main_color
            bold: True
        ImageButton:
            source: images_path + 'delete.png'
            size_hint: None, 0.5
            pos_hint: {'center_y': 0.5}
            width: self.height * self.image_ratio
            on_release: app.delete_recipe(root.recipe_id)
            color: main_color
    Label:
        padding_x: '5dp'
        text: 'Ingredients: '+', '.join(str(i) for i in root.ingredients)
        text_size: self.size
        valign: 'top'
        color: app_black
        mipmap: True


<ResultsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        Button:
            canvas.before:
                Color:
                    rgb: app_white
                Rectangle:
                    size: self.size
                    pos: self.pos
            background_normal: ''
            background_color: [0]*4
            color: app_black
            text: 'Go back'
            size_hint: None, None
            pos_hint: {'right': 1}
            padding: '15dp', '15dp'
            size: self.texture_size
            on_release: app.go_back_from_results()
        RecycleView:
            data: root.data
            viewclass: 'RecipeCard'
            RecycleGridLayout:
                size: 1, 1
                size_hint_y: None
                height: self.minimum_height
                cols: 2
                default_size_hint: 1, None
                default_size_y: '300dp'
                padding: '10dp'
                spacing: '5dp'


<AvailableIngrItem>:
    canvas.before:
        Color:
            rgb: app_white
        Rectangle:
            size: self.size
            pos: self.pos
    background_normal: ''
    background_color: [0]*4
    padding: '10dp', '10dp'
    color: app_black
    text: root.ingr_name
    on_release: app.select_ingr(root.ingr_name)


<SelectedIngrItem>:
    canvas.before:
        Color:
            rgb: main_color
        Rectangle:
            size: self.size
            pos: self.pos
    background_normal: ''
    background_color: [0]*4
    padding: '10dp', '10dp'
    color: app_black
    text: root.ingr_name + "   Ã—"
    on_release: app.deselect_ingr(root.ingr_name)

<SearchBox>:
    canvas.before:
        Color:
            rgb: app_white
        Rectangle:
            size: self.size
            pos: self.pos

<SearchScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        padding: '20dp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: '90dp'
            padding: '10dp'
            spacing: '20dp'
            SearchBox:
                data: root.data_selected
                viewclass: 'SelectedIngrItem'
                RecycleGridLayout:
                    size_hint: 1, None
                    height: self.minimum_height
                    cols: int(self.width//120)
                    default_size: '130dp', '35dp'
                    padding: '10dp'
                    spacing: '5dp'
            Button:
                background_normal: ""
                size_hint: None, 1
                width: self.height
                text: 'Search'
                color: app_black
                bold: True
                on_release: app.search_recipes()
        Label:
            text: "Select the ingredients you'd like the recipe to contain:"
            size_hint: 1, None
            height: self.texture_size[1]
            halign: 'left'
            text_size: self.size
            color: app_black
            padding: '15dp', '15dp'
        AvailableIngrRV:
            data: root.data_available
            viewclass: 'AvailableIngrItem'
            RecycleGridLayout:
                size_hint: 1, None
                size: self.minimum_size
                cols: int(root.width//120)
                default_size: '100dp', '35dp'
                padding: '10dp'
                spacing: '10dp'


<MainBoard>:
    canvas.before:
        Color:
            rgb: main_color_clear
        Rectangle:
            size: self.size
    Image:
        source: project_path + 'assets/images/wtc-logo-watermark.png'
        size_hint: 0.8, None
        size_hint_max_x: '500dp'
        height: self.width / self.image_ratio
        pos_hint: {'center_x': 0.5, 'y': 0.1}
        
    

<IngrReviewPopup>:
    auto_dismiss: False
    size_hint: None, None
    size: '350dp', '200dp'
    title: 'Exctract the ingredient:'
    title_color: app_black
    separator_color: [0]*4
    background: ''
    canvas.before:
        Color:
            rgb: app_white
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        Label:
            size_hint: 1, None
            size: self.texture_size
            text: root.recipe_title
            color: app_black
        Label:
            size_hint: 1, None
            size: self.texture_size
            text: root.text_with_unknown
            color: app_black
            bold: True
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            size: self.minimum_size
            spacing: '10dp'
            TextInput:
                id: ingredient_textinput
                color: app_black
                multiline: False
                on_text_validate: app.save_ingr_review(root.recipe_id, root.text_with_unknown, root.ids.ingredient_textinput.text)
            Button:
                id: save_button
                canvas.before:
                    Color:
                        rgb: main_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                background_normal: ''
                background_color: [0]*4
                size_hint: None, None
                size: self.texture_size
                padding: '15dp', '10dp'
                text: 'Save'
                color: app_black
                on_release: app.save_ingr_review(root.recipe_id, root.text_with_unknown, root.ids.ingredient_textinput.text)
        BoxLayout:
            orientation: 'horizontal'
            spacing: '20dp'
            size_hint_x: None
            size: self.minimum_size
            pos_hint: {'center_x': 0.5}
            Button:
                canvas.before:
                    Color:
                        rgb: app_red
                    Rectangle:
                        size: self.size
                        pos: self.pos
                background_normal: ''
                background_color: [0]*4
                size_hint: None, 1
                size: self.texture_size
                padding: '15dp', '10dp'
                text: 'Delete'
                color: app_white
                on_release: app.delete_unknown(root.text_with_unknown)
            Button:
                size_hint: None, 1
                size: self.texture_size
                padding: '15dp', '10dp'
                text: 'Cancel'
                on_release: root.dismiss()


<SidePanelButton@Button>:
    canvas.before:
        Color:
            rgb: app_white if not self.disabled else [0.7]*4
        Rectangle:
            size: self.size
            pos: self.pos
    background_normal: ''
    background_color: [0]*4
    background_disabled_normal: ''
    color: app_black
    disabled_color: app_black+(0.5,)
    size_hint: None, None
    size: self.texture_size
    padding: '10dp', '10dp'

<SidePanel>:
    orientation: 'vertical'
    size_hint: 0.3, 1
    size_hint_min_x: '250dp'
    canvas.before:
        Color:
            rgb: main_color
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, None
        size: self.minimum_size
        padding: '30dp'
        spacing: '30dp'
        Image:
            source: project_path + 'assets/images/wtc-logo-white-on-green.png'
            size_hint: 1, None
            height: self.parent.width / self.image_ratio
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            size: self.minimum_size
            spacing: '5dp'
            Label:
                id: load_label
                size_hint: None, None
                size: self.texture_size
                pos_hint: {'center_x': 0.5}
                color: app_black
                text: 'Load recipes from file: '
            SidePanelButton:
                id: load_button
                size_hint: None, None
                size: self.texture_size
                pos_hint: {'center_x': 0.5}
                text: 'Load recipes'
                on_release: app.load_recipes()
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            size: self.minimum_size
            spacing: '5dp'
            Label:
                size_hint: None, None
                size: self.texture_size
                pos_hint: {'center_x': 0.5}
                color: app_black
                text: str(root.num_pending_ingredients) + ' pending ingredients'
            SidePanelButton:
                id: review_button
                size_hint: None, None
                size: self.texture_size
                pos_hint: {'center_x': 0.5}
                text: 'Review ingredients'
                on_release: app.review_next_ingr()
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgb: app_white
            Rectangle:
                size: self.size
                pos: self.pos